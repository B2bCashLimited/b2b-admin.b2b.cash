::ng-deep.mat-form-field-appearance-outline .mat-form-field-infix {
  padding: 0.5em 0;
  border-top: 5px solid transparent;
}

.table {
  ::ng-deep.mat-form-field-wrapper {
    padding-bottom: 0;
  }

  width: 100%;
  margin-bottom: 1rem;
  color: #212529;
  border-collapse: collapse;

  td {
    padding: .75rem;
    vertical-align: top;
    border-bottom: 1px solid #dee2e6;
  }
}

::ng-deep.highlight {
  color: lightcoral;
  background: lightblue;
}